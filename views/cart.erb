<h2>Your cart</h2>
<br />
<br />

<div id="cart">

	<table class="table table-striped">
		<thead>
	    	<tr>
	          	<th>Name</th>
	          	<th>Price</th>
	          	<th>Qty</th>
	        </tr>
	    </thead>
	    <tbody>
	    	<% total_price = 0 %>
	      	<% total_qty = 0 %>	
	      	<% @items.each do |item| %>
	        	<tr>
	          		<td><%= item[0].title %></td>
	          		<td><%= item[0].price %></td>
	          		<td><%= item[1] %></td>
	        	</tr>
	        	<% total_price += item[0].price * item[1].to_i %>
	        	<% total_qty += item[1].to_i %>
	      	<% end %>

	      	<tr>
	      		<td><strong>Total: </strong></td>
	      		<td><strong><%= total_price %> rub </strong></td>
	          	<td><strong><%= total_qty %></strong></td>
	      	</tr>

	    </tbody>
	</table>


	<form action="/place_order" method="post" role="form">

		<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>" />

		<div class="form-group">
			<label>Name:</label>
			<input name="order[name]" type="text" class="form-control" placeholder="Enter your name">
		</div>

		<div class="form-group">
			<label>Phone:</label>
			<input name="order[phone]" type="text" class="form-control" placeholder="Enter your phone number">
		</div>

		<div class="form-group">
			<label>Delivery address:</label>
			<textarea name="order[address]" type="text" class="form-control" placeholder="Enter delivery address"></textarea>
		</div>
		
		<button type="submit" class="btn btn-success">Place this order</button>
		<button class="btn btn-danger" onclick="return cancel_order()">Cancel</button>

	</form>
</div>